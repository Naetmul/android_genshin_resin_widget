<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="danggai.app.resinwidget">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:allowClearUserData="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Genshin_resin_widget"
        android:usesCleartextTraffic="true">
        <service
            android:name=".service.CheckInForegroundService"
            android:enabled="true"
            android:exported="true"></service>
        <service
            android:name=".service.TemporaryNotificationListenerService"
            android:launchMode="singleTask"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>

        <receiver
            android:name=".ui.widget.ResinWidget"
            android:label="@string/widget_label_resin_fixed">
            <intent-filter>
                <action android:name="danggai.app.resinwidget.btn_refresh" />
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.appwidget.action.APPWIDGET_ENABLED" />
                <action android:name="android.appwidget.action.APPWIDGET_DISABLED" />
                <action android:name="android.appwidget.action.APPWIDGET_DELETED" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/resin_widget_info" />
        </receiver>
        <receiver
            android:name=".ui.widget.ResinWidgetResizable"
            android:label="@string/widget_label_resin_resizable">
            <intent-filter>
                <action android:name="danggai.app.resinwidget.btn_refresh" />
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.appwidget.action.APPWIDGET_ENABLED" />
                <action android:name="android.appwidget.action.APPWIDGET_DISABLED" />
                <action android:name="android.appwidget.action.APPWIDGET_DELETED" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/resin_widget_info" />
        </receiver>
        <receiver
            android:name=".ui.widget.DetailWidget"
            android:label="@string/widget_label_detail_fixed">
            <intent-filter>
                <action android:name="danggai.app.resinwidget.btn_refresh" />
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.appwidget.action.APPWIDGET_ENABLED" />
                <action android:name="android.appwidget.action.APPWIDGET_DISABLED" />
                <action android:name="android.appwidget.action.APPWIDGET_DELETED" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/detail_widget_info" />
        </receiver>

        <activity
            android:name=".ui.main.MainActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.cookie_web_view.CookieWebViewActivity" />
        <activity android:name=".ui.design.WidgetDesignActivity" />

        <provider
            android:name="androidx.work.impl.WorkManagerInitializer"
            android:authorities="danggai.app.resinwidget.App.workmanager-init"
            tools:node="remove" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/google_ads_app_id" />
    </application>

</manifest>
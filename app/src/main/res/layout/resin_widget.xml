<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/appWidgetBackgroundColor"
    android:padding="@dimen/widget_margin"
    android:theme="@style/ThemeOverlay.Genshin_resin_widget.AppWidgetContainer">

    <LinearLayout
        android:id="@+id/ll_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/rounded_square_white_5dp"
        >

        <ImageView
            android:id="@+id/iv_resin"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/resin"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/ll_sync"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingLeft="20dp"
                >

                <TextView
                    android:id="@+id/tv_sync_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="10/25 15:30"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    />

                <ImageView
                    android:id="@+id/iv_refersh"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/baseline_sync_24"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                >

                <LinearLayout
                    android:id="@+id/ll_resin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    >

                <TextView
                    android:id="@+id/tv_resin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:text="160"
                    android:textColor="@color/black"
                    android:layout_gravity="left"
                    android:singleLine="true"
                    />

                <TextView
                    android:id="@+id/tv_resin_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/160"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="left|bottom"
                    android:singleLine="true"
                    />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_remain_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0시간 0분 남음"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:paddingTop="2dp"
                    android:singleLine="true"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
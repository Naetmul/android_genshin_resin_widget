<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="danggai.app.resinwidget.ui.design.WidgetDesignViewModel"
            />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <include
            android:id="@+id/widget"
            layout="@layout/widget_detail_fixed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="50dp"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            >

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                >

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="15dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/widget_theme"
                    android:textColor="@color/black"
                    android:textSize="28sp"
                    android:textStyle="bold|italic"
                    />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >

                    <RadioButton
                        android:id="@+id/rb_theme_automatic"
                        style="@style/RadioButton"
                        android:layout_marginEnd="10dp"
                        android:onClick="@{(v) -> vm.onClickWidgetTheme(v)}"
                        android:text="@string/btn_automatic" />

                    <RadioButton
                        android:id="@+id/rb_theme_light"
                        style="@style/RadioButton"
                        android:layout_marginEnd="10dp"
                        android:onClick="@{(v) -> vm.onClickWidgetTheme(v)}"
                        android:text="@string/btn_light" />

                    <RadioButton
                        android:id="@+id/rb_theme_dark"
                        style="@style/RadioButton"
                        android:layout_marginEnd="10dp"
                        android:onClick="@{(v) -> vm.onClickWidgetTheme(v)}"
                        android:text="@string/btn_dark" />

                </RadioGroup>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="15dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/time_notation"
                    android:textColor="@color/black"
                    android:textSize="28sp"
                    android:textStyle="bold|italic" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RadioButton
                        android:id="@+id/rb_remain_time"
                        style="@style/RadioButton"
                        android:layout_marginEnd="10dp"
                        android:onClick="@{(v) -> vm.onClickSetDetailTimeNotation(v)}"
                        android:text="@string/btn_remain_time" />

                    <RadioButton
                        android:id="@+id/rb_full_charge_time"
                        style="@style/RadioButton"
                        android:layout_marginEnd="10dp"
                        android:onClick="@{(v) -> vm.onClickSetDetailTimeNotation(v)}"
                        android:text="@string/btn_full_charge_time" />

                </RadioGroup>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="15dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/visible_data"
                    android:textColor="@color/black"
                    android:textSize="28sp"
                    android:textStyle="bold|italic"
                    />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cb_resin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:checked="@={vm.lvResinDataVisibility}"
                        android:text="@string/resin"
                        android:textSize="14sp"
                        app:buttonTint="@color/checkbox_filter_tint" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cb_daily_commission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:checked="@={vm.lvDailyCommissionDataVisibility}"
                        android:text="@string/daily_commissions"
                        android:textSize="14sp"
                        app:buttonTint="@color/checkbox_filter_tint" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cb_enemies_of_note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:checked="@={vm.lvWeeklyBossDataVisibility}"
                        android:text="@string/enemies_of_note"
                        android:textSize="14sp"
                        app:buttonTint="@color/checkbox_filter_tint" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cb_realm_currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:checked="@={vm.lvRealmCurrencyDataVisibility}"
                        android:text="@string/realm_currency"
                        android:textSize="14sp"
                        app:buttonTint="@color/checkbox_filter_tint" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cb_number_of_expedition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:checked="@={vm.lvExpeditionDataVisibility}"
                        android:text="@string/number_of_expedition"
                        android:textSize="14sp"
                        app:buttonTint="@color/checkbox_filter_tint" />

                </androidx.appcompat.widget.LinearLayoutCompat>


                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="15dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/font_size"
                    android:textColor="@color/black"
                    android:textSize="28sp"
                    android:textStyle="bold|italic" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    >

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@{vm.lvFontSizeDetail.toString()}"
                        android:hint="12"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic"
                        android:gravity="center"
                        />

                    <androidx.appcompat.widget.AppCompatSeekBar
                        style="@style/SeekBar"
                        android:id="@+id/sb_fontsize"
                        android:progress="@={vm.lvFontSizeDetail}"
                        android:max="24"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextViewButton"
                        android:id="@+id/mb_reset_fontsize_detail"
                        android:text="@string/reset"
                        android:onClick="@{(v)->vm.onClickResetButton(v)}"
                        />


                </androidx.appcompat.widget.LinearLayoutCompat>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="15dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/background_transparency"
                    android:textColor="@color/black"
                    android:textSize="28sp"
                    android:textStyle="bold|italic" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    >

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@{vm.lvTransparency.toString()}"
                        android:hint="100"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic"
                        android:gravity="center"
                        />

                    <androidx.appcompat.widget.AppCompatSeekBar
                        style="@style/SeekBar"
                        android:id="@+id/sb_transparent"
                        android:progress="@={vm.lvTransparency}"
                        android:max="255"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextViewButton"
                        android:id="@+id/mb_reset_bg_trans"
                        android:text="@string/reset"
                        android:onClick="@{(v)->vm.onClickResetButton(v)}"
                        />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </ScrollView>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>